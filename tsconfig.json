{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Target latest ES features for better performance
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],

    // Basic configuration
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Module resolution optimizations
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    // React and JSX optimizations
    "jsx": "preserve",

    // Performance optimizations
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    // TypeScript optimizations
    "noImplicitOverride": true,
    "useDefineForClassFields": true,
    "types": [],

    // Essential type checking
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.spec.ts", "src/**/*.spec.tsx", ".next/types/**/*.ts", "mdx-components.tsx", "vitest.config.mts"],
  "exclude": ["node_modules", "dist", "build", "coverage"]
}
