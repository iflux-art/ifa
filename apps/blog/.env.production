# Blog App - Production Environment

NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Blog App
NEXT_PUBLIC_APP_URL=https://blog.yourdomain.com
PORT=3001

# Production Database (use environment variables from deployment platform)
# DATABASE_URL=${DATABASE_URL}

# Production JWT Secret (use environment variables from deployment platform)
# JWT_SECRET=${JWT_SECRET}

# Blog-specific Production Features
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_TAGS=true
NEXT_PUBLIC_ENABLE_CATEGORIES=true
NEXT_PUBLIC_POSTS_PER_PAGE=10

# Feature Flags - Production (optimized)
NEXT_PUBLIC_ENABLE_REACT_COMPILER=true
NEXT_PUBLIC_ENABLE_PPR=true
NEXT_PUBLIC_ENABLE_TURBOPACK=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Production Features (optimized)
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAP=false
ENABLE_TYPE_CHECKING=false
ENABLE_BUNDLE_ANALYSIS=false
ENABLE_ISR=true

# Performance Features (enabled for production)
ENABLE_CACHING=true
ENABLE_COMPRESSION=true

# Production CMS
# CMS_API_URL=${CMS_API_URL}
# CMS_API_KEY=${CMS_API_KEY}
CONTENT_CACHE_TTL=3600

# Production SEO
NEXT_PUBLIC_SITE_NAME=Blog App
NEXT_PUBLIC_SITE_DESCRIPTION=A modern blog application
NEXT_PUBLIC_SITE_URL=https://blog.yourdomain.com
NEXT_PUBLIC_DEFAULT_OG_IMAGE=/og-image.jpg

# Production Rate Limiting (strict)
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW=900000

# Production CORS (strict)
CORS_ORIGINS=https://blog.yourdomain.com,https://yourdomain.com
CORS_CREDENTIALS=true

# Production Analytics
# NEXT_PUBLIC_GA_ID=${GA_ID}
# NEXT_PUBLIC_GTM_ID=${GTM_ID}