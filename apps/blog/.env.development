# Blog App - Development Environment

NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Blog App (Dev)
NEXT_PUBLIC_APP_URL=http://localhost:3001
PORT=3001

# Development Database
DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/blog_app_dev

# Development JWT Secret
JWT_SECRET=development-blog-jwt-secret-key-32-chars-minimum-length

# Blog-specific Development Features
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_TAGS=true
NEXT_PUBLIC_ENABLE_CATEGORIES=true
NEXT_PUBLIC_POSTS_PER_PAGE=5

# Feature Flags - Development
NEXT_PUBLIC_ENABLE_REACT_COMPILER=true
NEXT_PUBLIC_ENABLE_PPR=true
NEXT_PUBLIC_ENABLE_TURBOPACK=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Development-specific Features
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAP=true
ENABLE_TYPE_CHECKING=true
ENABLE_BUNDLE_ANALYSIS=true
ENABLE_ISR=false

# Performance Features (relaxed for development)
ENABLE_CACHING=false
ENABLE_COMPRESSION=false

# Development CMS
CMS_API_URL=http://localhost:5000
CMS_API_KEY=dev-cms-api-key
CONTENT_CACHE_TTL=60

# Development SEO
NEXT_PUBLIC_SITE_NAME=Blog App (Dev)
NEXT_PUBLIC_SITE_DESCRIPTION=A modern blog application (Development)
NEXT_PUBLIC_SITE_URL=http://localhost:3001
NEXT_PUBLIC_DEFAULT_OG_IMAGE=/og-image-dev.jpg

# Development Rate Limiting (more permissive)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900000

# Development CORS (permissive)
CORS_ORIGINS=*
CORS_CREDENTIALS=true