# Blog App Environment Configuration

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Blog App
NEXT_PUBLIC_APP_URL=http://localhost:3001
PORT=3001

# Database Configuration (Content Management)
# DATABASE_URL=postgresql://user:password@localhost:5432/blog_app_db
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=blog_app_db
# DB_USER=user
# DB_PASSWORD=password

# Content Management
# CMS_API_URL=https://your-cms-api.com
# CMS_API_KEY=your-cms-api-key
# CONTENT_CACHE_TTL=3600

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-blog
JWT_EXPIRATION=1h
REFRESH_TOKEN_EXPIRATION=7d

# Blog-specific Features
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_TAGS=true
NEXT_PUBLIC_ENABLE_CATEGORIES=true
NEXT_PUBLIC_POSTS_PER_PAGE=10

# Feature Flags - Blog App Specific
NEXT_PUBLIC_ENABLE_REACT_COMPILER=true
NEXT_PUBLIC_ENABLE_PPR=true
NEXT_PUBLIC_ENABLE_TURBOPACK=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAP=true
ENABLE_TYPE_CHECKING=true
ENABLE_BUNDLE_ANALYSIS=false

# Performance Features
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_ISR=true

# SEO Configuration
NEXT_PUBLIC_SITE_NAME=Blog App
NEXT_PUBLIC_SITE_DESCRIPTION=A modern blog application
NEXT_PUBLIC_SITE_URL=http://localhost:3001
NEXT_PUBLIC_DEFAULT_OG_IMAGE=/og-image.jpg

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Social Media (optional)
# NEXT_PUBLIC_TWITTER_HANDLE=@yourblog
# NEXT_PUBLIC_FACEBOOK_PAGE=yourblogpage

# Email Configuration (for notifications)
# EMAIL_PROVIDER=smtp
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourblog.com

# Rate Limiting
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW=900000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true