# Blog App - Test Environment

NODE_ENV=test
NEXT_PUBLIC_APP_NAME=Blog App (Test)
NEXT_PUBLIC_APP_URL=http://localhost:3001
PORT=3001

# Test Database
DATABASE_URL=postgresql://test_user:test_password@localhost:5432/blog_app_test

# Test JWT Secret
JWT_SECRET=test-blog-jwt-secret-key-32-chars-minimum-length-for-testing

# Blog-specific Test Features (minimal for faster tests)
NEXT_PUBLIC_ENABLE_COMMENTS=false
NEXT_PUBLIC_ENABLE_SEARCH=false
NEXT_PUBLIC_ENABLE_TAGS=true
NEXT_PUBLIC_ENABLE_CATEGORIES=true
NEXT_PUBLIC_POSTS_PER_PAGE=3

# Feature Flags - Test (minimal features)
NEXT_PUBLIC_ENABLE_REACT_COMPILER=false
NEXT_PUBLIC_ENABLE_PPR=false
NEXT_PUBLIC_ENABLE_TURBOPACK=false
NEXT_PUBLIC_ENABLE_DARK_MODE=false
NEXT_PUBLIC_ENABLE_ANIMATIONS=false
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Test-specific Features
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAP=false
ENABLE_TYPE_CHECKING=false
ENABLE_BUNDLE_ANALYSIS=false
ENABLE_ISR=false

# Performance Features (disabled for tests)
ENABLE_CACHING=false
ENABLE_COMPRESSION=false

# Test CMS (mock)
CMS_API_URL=http://localhost:5001
CMS_API_KEY=test-cms-api-key
CONTENT_CACHE_TTL=0

# Test SEO
NEXT_PUBLIC_SITE_NAME=Blog App (Test)
NEXT_PUBLIC_SITE_DESCRIPTION=A modern blog application (Test)
NEXT_PUBLIC_SITE_URL=http://localhost:3001
NEXT_PUBLIC_DEFAULT_OG_IMAGE=/og-image-test.jpg

# Test Rate Limiting (very permissive)
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=900000

# Test CORS (permissive)
CORS_ORIGINS=*
CORS_CREDENTIALS=true