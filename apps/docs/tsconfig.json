{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
			"@/lib/*": ["./src/lib/*"],
			"@/utils/*": ["./src/utils/*"],
			"@/types/*": ["./src/types/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/config/*": ["./src/config/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/jest-dom.d.ts"
  ],
  "exclude": ["node_modules"]
}
