{
  "templateVariables": {
    "{{APP_NAME}}": {
      "description": "Application name (e.g., web, blog, hub)",
      "required": true
    },
    "{{APP_DESCRIPTION}}": {
      "description": "Application description",
      "required": true
    },
    "{{DEV_PORT}}": {
      "description": "Development server port (e.g., ' --port 3001')",
      "required": false,
      "default": ""
    },
    "{{START_PORT}}": {
      "description": "Production server port (e.g., ' --port 3001')",
      "required": false,
      "default": ""
    },
    "{{HOMEPAGE_URL}}": {
      "description": "Homepage URL for the application",
      "required": true
    },
    "{{REPOSITORY_URL}}": {
      "description": "Git repository URL",
      "required": true
    },
    "{{APP_URL}}": {
      "description": "Application URL for environment configuration",
      "required": true
    },
    "{{PLAYWRIGHT_BASE_URL}}": {
      "description": "Base URL for Playwright tests",
      "required": true
    }
  },
  "appSpecificConfigs": {
    "web": {
      "APP_NAME": "@repo/web",
      "APP_DESCRIPTION": "Modern web application built with Next.js 15, React 19, and TypeScript",
      "DEV_PORT": "",
      "START_PORT": "",
