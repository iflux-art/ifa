# Web App - Development Environment

NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Web App (Dev)
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000

# Development Database
DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/web_app_dev

# Development JWT Secret (not for production)
JWT_SECRET=development-jwt-secret-key-32-chars-minimum-length

# Feature Flags - Development
NEXT_PUBLIC_ENABLE_REACT_COMPILER=true
NEXT_PUBLIC_ENABLE_PPR=true
NEXT_PUBLIC_ENABLE_TURBOPACK=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Development-specific Features
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAP=true
ENABLE_TYPE_CHECKING=true
ENABLE_BUNDLE_ANALYSIS=true

# Performance Features (relaxed for development)
ENABLE_CACHING=false
ENABLE_COMPRESSION=false

# Development API
API_BASE_URL=http://localhost:4000
API_TIMEOUT=10000
API_RETRIES=1

# Development Rate Limiting (more permissive)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900000

# Development CORS (permissive)
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Development Monitoring (disabled)
# SENTRY_DSN=
# NEXT_PUBLIC_ANALYTICS_ID=