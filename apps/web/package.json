{
  "name": "@repo/web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Modern web application built with Next.js 15, React 19, and TypeScript",
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": "22.x",
    "pnpm": "9.15.9"
  },
  "scripts": {
    "dev": "node scripts/load-env.js && next dev",
    "clean": "rimraf .next .turbo",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "check:fix": "biome check --write .",
    "type-check": "tsc --noEmit",
    "preview": "next build && next start",
    "update-deps": "pnpm update",
    "update-deps:latest": "pnpm update --latest",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "deps:check": "pnpm dlx depcheck",
    "deps:update": "pnpm update",
    "deps:update:latest": "pnpm update --latest",
    "deps:audit": "pnpm audit --audit-level moderate",
    "env:load": "node scripts/load-env.js",
    "env:validate": "node scripts/load-env.js",
    "project:check": "node scripts/check-project.js",
    "project:validate": "node scripts/validate-app-structure.js"
  },
  "homepage": "https://github.com/your-org/nextjs-monorepo-project",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/nextjs-monorepo-project.git",
    "directory": "apps/web"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "lucide-react": "^0.525.0",
    "next": "^15.5.3",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^22.18.10",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*": "biome check --apply"
  },
  "sideEffects": false,
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "next-15",
    "react-19",
    "app-router",
    "modern-web-app",
    "performance-optimized"
  ]
}
