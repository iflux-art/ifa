# Web App - Test Environment

NODE_ENV=test
NEXT_PUBLIC_APP_NAME=Web App (Test)
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000

# Test Database (in-memory or test-specific)
DATABASE_URL=postgresql://test_user:test_password@localhost:5432/web_app_test

# Test JWT Secret
JWT_SECRET=test-jwt-secret-key-32-chars-minimum-length-for-testing

# Feature Flags - Test (minimal features for faster tests)
NEXT_PUBLIC_ENABLE_REACT_COMPILER=false
NEXT_PUBLIC_ENABLE_PPR=false
NEXT_PUBLIC_ENABLE_TURBOPACK=false
NEXT_PUBLIC_ENABLE_DARK_MODE=false
NEXT_PUBLIC_ENABLE_ANIMATIONS=false
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Test-specific Features
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAP=false
ENABLE_TYPE_CHECKING=false
ENABLE_BUNDLE_ANALYSIS=false

# Performance Features (disabled for tests)
ENABLE_CACHING=false
ENABLE_COMPRESSION=false

# Test API (mock or test server)
API_BASE_URL=http://localhost:4001
API_TIMEOUT=5000
API_RETRIES=0

# Test Rate Limiting (very permissive)
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=900000

# Test CORS (permissive)
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Test Monitoring (disabled)
# SENTRY_DSN=
# NEXT_PUBLIC_ANALYTICS_ID=