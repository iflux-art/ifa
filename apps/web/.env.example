# Web App Environment Configuration

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Web App
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/web_app_db
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=web_app_db
# DB_USER=user
# DB_PASSWORD=password

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRATION=1h
REFRESH_TOKEN_EXPIRATION=7d

# External APIs
# API_BASE_URL=https://api.example.com
# API_TIMEOUT=5000
# API_RETRIES=3

# Feature Flags - Web App Specific
NEXT_PUBLIC_ENABLE_REACT_COMPILER=true
NEXT_PUBLIC_ENABLE_PPR=true
NEXT_PUBLIC_ENABLE_TURBOPACK=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAP=true
ENABLE_TYPE_CHECKING=true
ENABLE_BUNDLE_ANALYSIS=false

# Performance Features
ENABLE_CACHING=true
ENABLE_COMPRESSION=true

# Monitoring (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# NEXT_PUBLIC_ANALYTICS_ID=

# Storage (if needed)
# STORAGE_PROVIDER=local
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true