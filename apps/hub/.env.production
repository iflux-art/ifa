# Hub App - Production Environment

NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Hub App
NEXT_PUBLIC_APP_URL=https://hub.yourdomain.com
PORT=3002

# Production Database (use environment variables from deployment platform)
# DATABASE_URL=${DATABASE_URL}

# Production Clerk Configuration (use production keys)
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=${CLERK_PUBLISHABLE_KEY}
# CLERK_SECRET_KEY=${CLERK_SECRET_KEY}

# Clerk Production URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Hub-specific Production Features
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true
NEXT_PUBLIC_ENABLE_USER_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_ANALYTICS_DASHBOARD=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Feature Flags - Production (optimized)
NEXT_PUBLIC_ENABLE_REACT_COMPILER=true
NEXT_PUBLIC_ENABLE_PPR=true
NEXT_PUBLIC_ENABLE_TURBOPACK=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Production Features (optimized)
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAP=false
ENABLE_TYPE_CHECKING=false
ENABLE_BUNDLE_ANALYSIS=false

# Performance Features (enabled for production)
ENABLE_CACHING=true
ENABLE_COMPRESSION=true

# Production APIs
# API_BASE_URL=${API_BASE_URL}
API_TIMEOUT=10000
API_RETRIES=3

# Production Redis
# REDIS_URL=${REDIS_URL}

# Production File Upload
STORAGE_PROVIDER=s3
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Production Rate Limiting (strict)
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=900000

# Production CORS (strict)
CORS_ORIGINS=https://hub.yourdomain.com,https://yourdomain.com
CORS_CREDENTIALS=true

# Production Monitoring
# SENTRY_DSN=${SENTRY_DSN}
# DATADOG_API_KEY=${DATADOG_API_KEY}

# Production Webhooks
# WEBHOOK_SECRET=${WEBHOOK_SECRET}
WEBHOOK_TIMEOUT=5000