{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Target ES2022 for optimal Next.js 15 and React 19 compatibility
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],

    // Basic configuration optimized for performance
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Module resolution optimized for Next.js 15
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    // React 19 and JSX configuration
    "jsx": "preserve",
    "jsxImportSource": "react",

    // Performance optimizations
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    // TypeScript 5.9 optimizations for Next.js 15 compatibility
    "useDefineForClassFields": true,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,

    // Essential type checking (simplified)
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // Next.js plugin for enhanced development experience
    "plugins": [
      {
        "name": "next"
      }
    ],

    // Simplified path mappings
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/types/*": ["./src/types/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/config/*": ["./src/config/*"],
      "@/stores/*": ["./src/stores/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "dist", "build", "coverage"]
}
