# Hub App - Development Environment

NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Hub App (Dev)
NEXT_PUBLIC_APP_URL=http://localhost:3002
PORT=3002

# Development Database
DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/hub_app_dev

# Development Clerk Configuration
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_development-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_development-clerk-secret-key

# Clerk Development URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Hub-specific Development Features
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true
NEXT_PUBLIC_ENABLE_USER_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_ANALYTICS_DASHBOARD=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Feature Flags - Development
NEXT_PUBLIC_ENABLE_REACT_COMPILER=true
NEXT_PUBLIC_ENABLE_PPR=true
NEXT_PUBLIC_ENABLE_TURBOPACK=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Development-specific Features
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAP=true
ENABLE_TYPE_CHECKING=true
ENABLE_BUNDLE_ANALYSIS=true

# Performance Features (relaxed for development)
ENABLE_CACHING=false
ENABLE_COMPRESSION=false

# Development APIs
API_BASE_URL=http://localhost:4002
API_TIMEOUT=15000
API_RETRIES=1

# Development Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Development File Upload
STORAGE_PROVIDER=local
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Development Rate Limiting (more permissive)
RATE_LIMIT_REQUESTS=2000
RATE_LIMIT_WINDOW=900000

# Development CORS (permissive)
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Development Webhooks
WEBHOOK_SECRET=dev-webhook-secret-key
WEBHOOK_TIMEOUT=10000