# Hub App Environment Configuration

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Hub App
NEXT_PUBLIC_APP_URL=http://localhost:3002
PORT=3002

# Database Configuration
# DATABASE_URL=postgresql://user:password@localhost:5432/hub_app_db
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=hub_app_db
# DB_USER=user
# DB_PASSWORD=password

# Authentication Configuration (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key

# Clerk Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Hub-specific Features
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true
NEXT_PUBLIC_ENABLE_USER_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_ANALYTICS_DASHBOARD=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Feature Flags - Hub App Specific
NEXT_PUBLIC_ENABLE_REACT_COMPILER=true
NEXT_PUBLIC_ENABLE_PPR=true
NEXT_PUBLIC_ENABLE_TURBOPACK=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAP=true
ENABLE_TYPE_CHECKING=true
ENABLE_BUNDLE_ANALYSIS=false

# Performance Features
ENABLE_CACHING=true
ENABLE_COMPRESSION=true

# External APIs
# API_BASE_URL=https://api.yourhub.com
# API_TIMEOUT=10000
# API_RETRIES=3

# Redis Configuration (for sessions/caching)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# File Upload Configuration
# STORAGE_PROVIDER=local
# MAX_FILE_SIZE=10485760
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email Configuration
# EMAIL_PROVIDER=smtp
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourhub.com

# Monitoring
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# DATADOG_API_KEY=your-datadog-api-key

# Rate Limiting (Higher limits for hub)
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=900000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true

# Webhook Configuration
# WEBHOOK_SECRET=your-webhook-secret
# WEBHOOK_TIMEOUT=5000