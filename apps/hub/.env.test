# Hub App - Test Environment

NODE_ENV=test
NEXT_PUBLIC_APP_NAME=Hub App (Test)
NEXT_PUBLIC_APP_URL=http://localhost:3002
PORT=3002

# Test Database
DATABASE_URL=postgresql://test_user:test_password@localhost:5432/hub_app_test

# Test Clerk Configuration (use test keys)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_test-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_test-clerk-secret-key

# Clerk Test URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Hub-specific Test Features (minimal for faster tests)
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=false
NEXT_PUBLIC_ENABLE_USER_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_ANALYTICS_DASHBOARD=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false

# Feature Flags - Test (minimal features)
NEXT_PUBLIC_ENABLE_REACT_COMPILER=false
NEXT_PUBLIC_ENABLE_PPR=false
NEXT_PUBLIC_ENABLE_TURBOPACK=false
NEXT_PUBLIC_ENABLE_DARK_MODE=false
NEXT_PUBLIC_ENABLE_ANIMATIONS=false
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Test-specific Features
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAP=false
ENABLE_TYPE_CHECKING=false
ENABLE_BUNDLE_ANALYSIS=false

# Performance Features (disabled for tests)
ENABLE_CACHING=false
ENABLE_COMPRESSION=false

# Test APIs (mock)
API_BASE_URL=http://localhost:4003
API_TIMEOUT=5000
API_RETRIES=0

# Test Redis (in-memory or test instance)
REDIS_URL=redis://localhost:6380
REDIS_HOST=localhost
REDIS_PORT=6380

# Test File Upload (restricted)
STORAGE_PROVIDER=local
MAX_FILE_SIZE=1048576
ALLOWED_FILE_TYPES=image/jpeg,image/png

# Test Rate Limiting (very permissive)
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=900000

# Test CORS (permissive)
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Test Webhooks
WEBHOOK_SECRET=test-webhook-secret-key
WEBHOOK_TIMEOUT=3000