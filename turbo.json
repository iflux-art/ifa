{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env",
    "tsconfig.json",
    "tailwind.config.*",
    "postcss.config.*",
    "biome.json",
    ".biomejs.json",
    "turbo.json",
    "pnpm-workspace.yaml"
  ],
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_*", "CI", "VERCEL", "TURBO_*"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "type-check"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "public/**",
        "app/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "components/**/*.{ts,tsx,js,jsx}",
        "lib/**/*.{ts,tsx,js,jsx}",
        "styles/**/*.{css,scss}",
        "next.config.*",
        "package.json",
        "tsconfig.json",
        "tailwind.config.*",
        "postcss.config.*",
        "biome.json",
        ".biomejs.json"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "storybook-static/**"
      ],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*", "CI", "VERCEL"],
      "cache": true,
      "persistent": false,
      "passThroughEnv": ["TURBO_REMOTE_CACHE_SIGNATURE_KEY"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "app/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "components/**/*.{ts,tsx,js,jsx}",
        "lib/**/*.{ts,tsx,js,jsx}",
        "styles/**/*.{css,scss}",
        "public/**",
        "next.config.*",
        "package.json",
        "tsconfig.json",
        "tailwind.config.*",
        "postcss.config.*",
        "biome.json",
        ".env*"
      ],
      "outputMode": "new-only"
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "lint": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx,js,jsx}",
        "components/**/*.{ts,tsx,js,jsx}",
        "lib/**/*.{ts,tsx,js,jsx}",
        "*.{ts,tsx,js,jsx}",
        "package.json",
        "biome.json",
        ".biomejs.json"
      ],
      "outputs": [],
      "cache": true
    },
    "format": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "app/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "components/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "lib/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "*.{ts,tsx,js,jsx,json,md,mdx}",
        "package.json",
        "biome.json",
        ".biomejs.json"
      ],
      "outputs": [],
      "cache": false
    },
    "check": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "app/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "components/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "lib/**/*.{ts,tsx,js,jsx,json,md,mdx}",
        "*.{ts,tsx,js,jsx,json,md,mdx}",
        "package.json",
        "biome.json",
        ".biomejs.json"
      ],
      "outputs": [],
      "cache": true
    },
    "type-check": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "app/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}",
        "*.{ts,tsx}",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [".tsbuildinfo", "tsconfig.tsbuildinfo"],
      "cache": true
    },
    "test": {
      "dependsOn": ["type-check"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx,js,jsx}",
        "components/**/*.{ts,tsx,js,jsx}",
        "lib/**/*.{ts,tsx,js,jsx}",
        "__tests__/**/*.{ts,tsx,js,jsx}",
        "**/*.test.{ts,tsx,js,jsx}",
        "**/*.spec.{ts,tsx,js,jsx}",
        "vitest.config.*",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": ["coverage/**", "test-results/**"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "test:watch": {
      "dependsOn": [],
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV"]
    },
    "test:ui": {
      "dependsOn": [],
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV"]
    },
    "test:coverage": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/*.test.{ts,tsx,js,jsx}",
        "**/*.spec.{ts,tsx,js,jsx}",
        "vitest.config.*",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "inputs": ["e2e/**/*.{ts,js}", "playwright.config.*", "package.json"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "test:e2e:ui": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "storybook": {
      "dependsOn": [],
      "cache": false,
      "persistent": true,
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx,js,jsx}",
        "components/**/*.{ts,tsx,js,jsx}",
        "lib/**/*.{ts,tsx,js,jsx}",
        "**/*.stories.{ts,tsx,js,jsx}",
        ".storybook/**",
        "package.json"
      ]
    },
    "build-storybook": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx,js,jsx}",
        "components/**/*.{ts,tsx,js,jsx}",
        "lib/**/*.{ts,tsx,js,jsx}",
        "**/*.stories.{ts,tsx,js,jsx}",
        ".storybook/**",
        "package.json"
      ],
      "outputs": ["storybook-static/**"],
      "cache": true
    },
    "clean": {
      "cache": false,
      "inputs": [],
      "outputs": []
    },
    "prebuild": {
      "dependsOn": ["type-check", "lint", "test"],
      "cache": true,
      "outputs": []
    },
    "ci": {
      "dependsOn": ["lint", "type-check", "test", "build"],
      "cache": false,
      "outputs": []
    },
    "ci:build": {
      "dependsOn": ["prebuild", "build"],
      "cache": false,
      "outputs": []
    },
    "depcheck": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx,js,jsx}",
        "components/**/*.{ts,tsx,js,jsx}",
        "lib/**/*.{ts,tsx,js,jsx}",
        "package.json",
        ".depcheckrc"
      ],
      "outputs": [],
      "cache": true
    },
    "env:validate": {
      "dependsOn": [],
      "inputs": [
        ".env*",
        "scripts/load-env.js",
        "package.json"
      ],
      "outputs": [],
      "cache": true
    },
    "setup": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    }
  },
  "remoteCache": {
    "signature": true
  }
}
