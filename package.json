{
  "name": "nextjs-monorepo-project",
  "version": "0.1.0",
  "private": true,
  "description": "A modern monorepo with Next.js App Router, pnpm workspace, and Turborepo",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:website": "turbo run dev --filter=@repo/website",
    "dev:blog": "turbo run dev --filter=@repo/blog",
    "dev:docs": "turbo run dev --filter=@repo/docs",
    "dev:hub": "turbo run dev --filter=@repo/hub",
    "dev:packages": "turbo run dev --filter=./packages/*",
    "dev:fast": "turbo run dev --parallel --no-deps",
    "dev:ui": "turbo run dev --filter=@repo/ui --parallel",
    "dev:with-deps": "turbo run build --filter=./packages/* && turbo run dev --parallel",
    "dev:watch": "turbo run dev --parallel --continue",
    "dev:setup": "node scripts/dev-setup.js",
    "dev:setup:fast": "node scripts/dev-setup.js --fast",
    "dev:watch-packages": "node scripts/watch-packages.js",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "start": "turbo run start --parallel",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch --parallel",
    "test:ui": "turbo run test:ui --parallel",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:ui": "turbo run test:e2e:ui",
    "lint": "turbo run lint",
    "lint:fix": "turbo run format",
    "format": "turbo run format",
    "check": "turbo run check",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "storybook": "turbo run storybook --parallel",
    "build-storybook": "turbo run build-storybook",
    "ci": "turbo run lint type-check test build",
    "ci:build": "turbo run build --filter=!@repo/ui",
    "ci:test": "turbo run test:coverage",
    "quality-check": "node scripts/quality-check.js",
    "quality-check:fix": "node scripts/quality-check.js --fix",
    "type-check:all": "node scripts/type-check.js",
    "reset": "turbo run clean && rm -rf node_modules && pnpm install",
    "setup": "pnpm install && turbo run build --filter=./packages/*"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.55.0",
    "@turbo/gen": "^1.13.4",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^20.19.13",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.6.0",
    "lodash.debounce": "^4.0.8",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "turbo": "^1.13.4",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}