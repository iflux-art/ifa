{
  "name": "nextjs-monorepo-project",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "A modern monorepo with Next.js App Router, pnpm workspace, and Turborepo",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@repo/web",
    "dev:blog": "turbo run dev --filter=blog",
    "dev:hub": "turbo run dev --filter=hub",
    "dev:packages": "turbo run dev --filter=./packages/*",
    "dev:apps": "turbo run dev --filter=./apps/* --parallel",
    "dev:fast": "turbo run dev --parallel --no-deps",
    "dev:with-deps": "turbo run build --filter=./packages/* && turbo run dev --parallel",
    "dev:watch": "turbo run dev --parallel --continue",
    "build": "turbo run build",
    "build:apps": "turbo run build --filter=./apps/*",
    "build:packages": "turbo run build --filter=./packages/*",
    "build:web": "turbo run build --filter=@repo/web",
    "build:blog": "turbo run build --filter=blog",
    "build:hub": "turbo run build --filter=hub",
    "start": "turbo run start --parallel",
    "start:web": "turbo run start --filter=@repo/web",
    "start:blog": "turbo run start --filter=blog",
    "start:hub": "turbo run start --filter=hub",
    "preview": "turbo run preview --parallel",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "test:watch": "turbo run test:watch --parallel",
    "test:ui": "turbo run test:ui --parallel",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:ui": "turbo run test:e2e:ui",
    "test:e2e:web": "turbo run test:e2e --filter=@repo/web",
    "test:e2e:blog": "turbo run test:e2e --filter=blog",
    "test:e2e:hub": "turbo run test:e2e --filter=hub",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "check": "turbo run check",
    "check:fix": "turbo run check:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf .turbo",
    "clean:all": "turbo run clean && rm -rf node_modules .turbo && pnpm install",
    "prebuild": "turbo run prebuild",
    "ci": "turbo run ci",
    "ci:build": "turbo run ci:build",
    "ci:test": "turbo run test:coverage",
    "ci:lint": "turbo run lint type-check",
    "reset": "turbo run clean && rm -rf node_modules .turbo && pnpm install",
    "setup": "pnpm install && turbo run setup",
    "setup:fresh": "rm -rf node_modules .turbo && pnpm install && turbo run build --filter=./packages/*",
    "deps:analyze": "node scripts/deps-tool.js analyze",
    "deps:optimize": "node scripts/deps-tool.js optimize",
    "deps:dry-run": "node scripts/deps-tool.js dry-run",
    "deps:interactive": "node scripts/deps-tool.js interactive",
    "deps:update": "bash scripts/update-dependencies.sh",
    "deps:check": "turbo run deps:check",
    "deps:audit": "pnpm audit --audit-level moderate",
    "deps:audit:fix": "pnpm audit --fix",
    "env:validate": "turbo run env:validate",
    "env:validate:all": "turbo run env:validate",
    "perf:measure": "node scripts/measure-build-performance.js",
    "workspace:validate": "node scripts/validate-workspace.js",
    "workspace:sync": "node scripts/sync-configs.js",
    "build:deploy": "node scripts/build-deployment.js build",
    "build:deploy:fast": "node scripts/build-deployment.js build --skip-checks",
    "build:report": "node scripts/build-deployment.js report",
    "deploy:prep": "node scripts/build-deployment.js prep",
    "deploy:prep:staging": "node scripts/build-deployment.js prep staging"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@turbo/gen": "^1.13.4",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^22.18.10",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.6.0",
    "fast-glob": "^3.3.3",
    "lodash.debounce": "^4.0.8",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.14",
    "turbo": "^1.13.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531",
  "engines": {
    "node": "22.x",
    "pnpm": "9.15.9"
  }
}
