    "base.mjs",
    "nextjs.mjs",
    "react.mjs"
  ],
  "dependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "exports": {
    ".": {
      "import": "./index.mjs"
    },
    "./base": {
      "import": "./base.mjs"
    },
    "./nextjs": {
      "import": "./nextjs.mjs"
    },
    "./react": {
      "import": "./react.mjs"
    }
  }
