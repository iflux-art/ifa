{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "extends": ["./base.json"],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noCommentText": "error",
        "noDuplicateJsxProps": "error"
      },
      "style": {
        "useImportType": "error",
        "useExportType": "error"
      }
    }
  },
  "javascript": {
    "globals": ["React", "JSX"]
  },
  "files": {
    "ignoreUnknown": true,
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx",
      "src/**/*.test.ts",
      "src/**/*.test.tsx",
      "src/**/*.spec.ts",
      "src/**/*.spec.tsx",
      "src/**/*.stories.ts",
      "src/**/*.stories.tsx"
    ]
  }
}