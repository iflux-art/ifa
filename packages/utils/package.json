{
  "name": "@repo/utils",
  "version": "0.1.0",
  "private": true,
  "description": "单体仓库的共享工具函数",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "depcheck": "pnpm dlx depcheck"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^22.18.10",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cn": {
      "types": "./dist/cn.d.ts",
      "import": "./dist/cn.js"
    },
    "./array": {
      "types": "./dist/array.d.ts",
      "import": "./dist/array.js"
    },
    "./function": {
      "types": "./dist/function.d.ts",
      "import": "./dist/function.js"
    },
    "./date": {
      "types": "./dist/date.d.ts",
      "import": "./dist/date.js"
    },
    "./object": {
      "types": "./dist/object.d.ts",
      "import": "./dist/object.js"
    },
    "./string": {
      "types": "./dist/string.d.ts",
      "import": "./dist/string.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.js"
    },
    "./error": {
      "types": "./dist/error.d.ts",
      "import": "./dist/error.js"
    },
    "./async": {
      "types": "./dist/async.d.ts",
      "import": "./dist/async.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  }
}
