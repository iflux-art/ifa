{
  "name": "@repo/middleware",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Shared middleware utilities for Next.js applications",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist .turbo",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "next": "^15.5.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^22.18.10",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "next": "^15.0.0"
  }
}
