# =============================================================================
# Blog App - Development Environment
# =============================================================================
# Usage: Copy to .env.local for local development
# npm run dev

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Blog App (Dev)
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000

# -----------------------------------------------------------------------------
# Blog Features (Client-side)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_TAGS=true
NEXT_PUBLIC_ENABLE_CATEGORIES=true
NEXT_PUBLIC_POSTS_PER_PAGE=5

# -----------------------------------------------------------------------------
# Content & Cache
# -----------------------------------------------------------------------------
CONTENT_CACHE_TTL=60

# -----------------------------------------------------------------------------
# SEO (Client-side)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_NAME=Blog App (Dev)
NEXT_PUBLIC_SITE_DESCRIPTION=A modern blog application (Development)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_DEFAULT_OG_IMAGE=/og-image-dev.jpg

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------
# CMS_API_URL=http://localhost:5000
# CMS_API_KEY=dev-cms-api-key
